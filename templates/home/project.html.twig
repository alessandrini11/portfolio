{% extends 'base.html.twig' %}

{% block title %}projects{% endblock %}

{% block body %}
    <section class="min-h-screen py-16">
        <div class="w-10/12 mx-auto">
            <div class="text-center">
                <h2 class="text-5xl font-medium">My Projects</h2>
                <span class="text-xl text-red font-medium font-ubuntu">what i did</span>
            </div>
            <div class="mt-5 grid md:grid-cols-3 gap-5">
                {% for project in projects %}
                    <div class="border">
                        <div 
                        style="
                            background: url('uploads/projects/{{project.image}}');
                            background-repeat: no-repeat;
                            background-position: center;
                            background-size: cover;
                            "
                        class="h-40 flex">
                            <a class="w-full h-full" href={{project.url}}>
                            </a>
                        </div>
                        <div class="space-y-3 p-4">
                            <p><a href={{project.url}} class="font-ubuntu font-medium text-xl">{{project.name}}</a></p>
                            <div class="flex  justify-around">
                                <div class="">
                                    <h3>Front-end</h3>
                                    <ul class="flex items-center space-x-2">
                                        {% for tech in project.frontend %}
                                            <li><img class="h-7" src="uploads/logos/{{tech.icon}}" alt={{tech.name}}></li>
                                        {%  endfor %}
                                    </ul>
                                </div>
                                <div class="">
                                    <h3>Back-end</h3>
                                    <ul class="flex items-center space-x-2">
                                        {% for tech in project.backend %}
                                            <li><img class="h-8" src="uploads/logos/{{tech.icon}}" alt={{tech.name}}></li>
                                        {%  endfor %}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
